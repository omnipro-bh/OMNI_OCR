{
  "manifest_version": 3,
  "name": "OMNI PRO OCR Solution",
  "short_name": "OMNI PRO OCR",
  "version": "1.0.0",
  "description": "OCR text recognition extension branded by OMNI PRO.",

  "icons": {
    "16": "images/copyfish-16.png",
    "32": "images/copyfish-32.png",
    "48": "images/copyfish-48.png",
    "128": "images/copyfish-128.png"
  },

  "action": {
    "default_icon": {
      "16": "images/copyfish-16.png",
      "32": "images/copyfish-32.png",
      "48": "images/copyfish-48.png",
      "128": "images/copyfish-128.png"
    },
    "default_title": "OMNI PRO OCR Solution"
  },

  "background": {
    "service_worker": "scripts/background_sw.js"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "contextMenus",
    "scripting",
    "nativeMessaging"
  ],

  "host_permissions": ["<all_urls>"],

    "commands": {
    "desktop-text-capture-instant": {
      "suggested_key": { "default": "Alt+Shift+S" },
      "description": "Desktop Text Capture (Instant)"
    },
    "desktop-text-capture-3s-delay": {
      "suggested_key": { "default": "Alt+Shift+D" },
      "description": "Desktop Text Capture (3s delay)"
    },
    "get-image-from-clipboard": {
      "suggested_key": { "default": "Alt+Shift+C" },
      "description": "Get image from clipboard"
    }
  },

  "web_accessible_resources": [
    {
      "resources": [
        "message-dialog.html",
        "dialog.html",
        "config/config.json",
        "images/gear.png",
        "images/outside.png",
        "images/close.png",
        "images/translate.png",
        "images/deepl.jpg",
        "images/copyfish-32.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "default_locale": "en",

  "browser_specific_settings": {
    "gecko": {
      "id": "omnipro-ocr@example.com",
      "strict_min_version": "109.0"
    }
  }
}
